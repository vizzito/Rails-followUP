<h1>Listing posts</h1>
<div class = "row">
	<div class = "col-md-2">
		Title
	</div>
	<div class = "col-md-2">
		Text
	</div>
	<div class = "col-md-2">
		
	</div>
</div>
<% @posts.each do |post| %>
<div class = "row">
		<div class = "col-md-2"><%= post.title %></div>
		<div class = "col-md-2"><%= post.text %></div>
		<div class = "col-md-1"><%= link_to 'Show', post %></div>
		<div class = "col-md-1"><%= link_to 'Edit', edit_post_path(post) %></div>
		<div class = "col-md-1"><%= link_to 'Destroy', post_path(post),
		method: :delete, data: { confirm: 'Are you sure?' } %></div>
		<div class = "col-md-1"></div>
</div>
<% end %>

<%= link_to 'New post', new_post_path %>
