<h3>Post Details</h3>
<div class="panel panel-default margin-left">
	<div class="panel-heading">
	<p>
		<strong>Title:</strong>
		<%= @post.title %>
	</p>

	<p>
		<strong>Text:</strong>
		<%= @post.text %>
	</p>
	</div>
	<br/>

	<h4>Comments</h4>
	<%= render @post.comments %>

	<br />
	<h2>Add a comment:</h2>
	<%= render "comments/form"%>

	<%= link_to 'Back', posts_path %> | <%= link_to 'Edit', edit_post_path(@post) %>
</div>
